# Auto detect text files and normalize line endings
* text=auto

# Force LF for Unix scripts and config files
*.sh text eol=lf
*.bash text eol=lf
/mvnw text eol=lf
back-be/mvnw text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.java text eol=lf
*.xml text eol=lf
*.properties text eol=lf
*.sql text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf

# Force CRLF for Windows files
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files (no conversion)
*.jar binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
